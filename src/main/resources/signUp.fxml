<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Hyperlink?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.formations.controllers.SignUpController">
    <!-- Background Image -->
    <ImageView fitWidth="800" fitHeight="600" preserveRatio="false">
        <image>
            <Image url="@/images/mobile-password-forgot.png"/> <!-- Add a background image -->
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox spacing="20" alignment="CENTER" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 20;">
        <!-- Logo Only - Adjusted Size -->
        <ImageView fitHeight="150" fitWidth="375" preserveRatio="true">
            <image>
                <Image url="@/images/logoEasyHR.png"/>
            </image>
        </ImageView>

        <!-- Title -->
        <Label text="Create an Account" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
            <font>
                <Font name="Arial" size="28"/>
            </font>
        </Label>

        <!-- Subtitle -->
        <Label text="Join us today!" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;">
            <font>
                <Font name="Arial" size="16"/>
            </font>
        </Label>

        <!-- Form and Camera Container -->
        <HBox spacing="40" alignment="CENTER">
            <!-- Form Container -->
            <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
                <!-- Full Name Field -->
                <TextField fx:id="nameField" promptText="Full Name" prefWidth="250" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                    <font>
                        <Font name="Arial" size="14"/>
                    </font>
                </TextField>

                <!-- Email Field -->
                <TextField fx:id="emailField" promptText="Email" prefWidth="250" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                    <font>
                        <Font name="Arial" size="14"/>
                    </font>
                </TextField>

                <!-- Phone Number Field -->
                <TextField fx:id="phoneField" promptText="Phone Number" prefWidth="250" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                    <font>
                        <Font name="Arial" size="14"/>
                    </font>
                </TextField>

                <!-- Password Field -->
                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                    <font>
                        <Font name="Arial" size="14"/>
                    </font>
                </PasswordField>

                <!-- Confirm Password Field -->
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="250" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                    <font>
                        <Font name="Arial" size="14"/>
                    </font>
                </PasswordField>

                <!-- Capture Image Button -->
                <Button text="Capture Image" onAction="#handleCaptureImage" prefWidth="250" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12; -fx-border-radius: 5; -fx-cursor: hand;">
                    <font>
                        <Font name="Arial" size="16"/>
                    </font>
                </Button>

                <!-- Sign Up Button -->
                <Button text="Sign Up" onAction="#handleSignUp" prefWidth="250" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12; -fx-border-radius: 5; -fx-cursor: hand;">
                    <font>
                        <Font name="Arial" size="16"/>
                    </font>
                </Button>

                <!-- Login Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" style="-fx-text-fill: #7F8C8D; -fx-font-size: 14px;">
                        <font>
                            <Font name="Arial" size="14"/>
                        </font>
                    </Label>
                    <Hyperlink fx:id="signUpLink" text="Log in" onAction="#handleLoginRedirect" style="-fx-text-fill: #3498DB; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: transparent;">
                        <font>
                            <Font name="Arial Bold" size="14"/>
                        </font>
                    </Hyperlink>
                </HBox>
            </VBox>

            <!-- Camera Feed -->
            <VBox spacing="20" alignment="CENTER">
                <Label text="Camera Feed" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                    <font>
                        <Font name="Arial" size="16"/>
                    </font>
                </Label>
                <ImageView fx:id="webcamView" fitWidth="320" fitHeight="240" style="-fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 10);"/>
            </VBox>
        </HBox>

        <!-- Status Messages -->
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="errorLabel" style="-fx-text-fill: #E74C3C; -fx-font-size: 14px; -fx-font-weight: bold;">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
            </Label>
            <Label fx:id="successLabel" style="-fx-text-fill: #2ECC71; -fx-font-size: 14px; -fx-font-weight: bold;">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
            </Label>
        </VBox>
    </VBox>
</StackPane>
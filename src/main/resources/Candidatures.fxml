<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: #F4F4F4; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Offres.controllers.CandidaturesController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/d.png" />
         </image>
      </ImageView>

      <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" text="📄 Liste des Candidatures" />

      <ListView fx:id="candidaturesListView" prefHeight="400" prefWidth="600" style="-fx-border-color: #ddd; -fx-border-radius: 10px; -fx-background-radius: 10px;" />

      <HBox spacing="10">
         <Button fx:id="generatePdfButton" onAction="#handleGeneratePdfReport" text="📑 Générer PDF" style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 15px; -fx-border-radius: 5px;" />
         <Button onAction="#fermerFenetre" text="❌ Fermer" style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 15px; -fx-border-radius: 5px;" />
      </HBox>
   </children>
</VBox>

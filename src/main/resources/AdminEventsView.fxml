<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.evenement.controllers.AdminEventsController">

    <stylesheets>
        <String fx:value="style.css" />
    </stylesheets>

    <VBox spacing="20" styleClass="fade-in" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <!-- En-tête moderne -->
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-container">
            <Text styleClass="header-title" text="Gestion des Événements" />

            <Region HBox.hgrow="ALWAYS" />

            <Button onAction="#handleAddEvent" styleClass="action-button" text="Ajouter">
                <graphic>
                    <FontAwesomeIconView glyphName="PLUS" size="16" />
                </graphic>
            </Button>

            <Button onAction="#handleRefresh" styleClass="action-button" text="Actualiser">
                <graphic>
                    <FontAwesomeIconView glyphName="REFRESH" size="16" />
                </graphic>
            </Button>
        </HBox>

        <!-- TableView -->
        <TableView fx:id="eventTable" styleClass="fade-in" VBox.vgrow="ALWAYS">
            <columns>
                <!-- <TableColumn fx:id="idCol" text="ID" prefWidth="60"/> -->
                <TableColumn fx:id="titreCol" prefWidth="200" text="Titre" />
                <!--   <TableColumn fx:id="descriptionCol" text="Description" prefWidth="300"/> -->
                <TableColumn fx:id="dateCol" prefWidth="150" text="Date" />
                <!--      <TableColumn fx:id="lieuCol" text="Lieu" prefWidth="150"/> -->
                <TableColumn fx:id="capaciteCol" prefWidth="100" text="Capacité" />
                <TableColumn fx:id="participantsCol" prefWidth="100" text="Participants" />
                <TableColumn fx:id="actionCol" prefWidth="300" text="Action" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.tache.controllers.WeatherController"
            style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">

    <VBox spacing="20" alignment="CENTER" layoutX="0" layoutY="0" prefWidth="1000" prefHeight="700" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <!-- App Title -->
        <Label text="🌦️ Weather App"
               style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold;"/>

        <!-- City Input Field -->
        <TextField fx:id="cityTextField" promptText="Enter city name..."
                   style="-fx-font-size: 18px; -fx-pref-width: 300px; -fx-padding: 8px; -fx-border-radius: 10px; -fx-border-color: white; -fx-background-radius: 10px;"/>

        <!-- Get Weather Button -->
        <Button fx:id="getWeatherButton" text="🌍 Get Weather" onAction="#fetchWeather"
                style="-fx-font-size: 18px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px; -fx-font-weight: bold; -fx-border-color: white;"/>

        <!-- Weather Display Label -->
        <Label fx:id="weatherLabel" text="Weather details will appear here" wrapText="true"
               style="-fx-font-size: 20px; -fx-padding: 15px; -fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-pref-width: 350px;"/>

    </VBox>

</AnchorPane>

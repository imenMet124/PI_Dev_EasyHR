<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.tache.controllers.TacheController"
            style="-fx-background-color: #f8f9fa;">

    <top>
        <Label text="Gestion des Tâches"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20px;">
            <TableView fx:id="tacheTable">
                <columns>
                    <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="titreCol" text="Titre" prefWidth="200"/>
                    <TableColumn fx:id="statutCol" text="Statut" prefWidth="150"/>
                </columns>
            </TableView>

            <GridPane hgap="10" vgap="10">
                <Label text="Titre:"/>
                <TextField fx:id="txtTitre" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="1"/>
                <TextField fx:id="txtDescription" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Priorité:" GridPane.rowIndex="2"/>
                <ComboBox fx:id="cbPriorite" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Deadline:" GridPane.rowIndex="3"/>
                <DatePicker fx:id="dpDeadline" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Assigné à (ID):" GridPane.rowIndex="4"/>
                <ComboBox fx:id="cbAssignedTo" GridPane.columnIndex="1" GridPane.rowIndex="4"/>


                <Label text="Statut:" GridPane.rowIndex="5"/>
                <ComboBox fx:id="cbStatut" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="center" style="-fx-padding: 10px;">
            <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterTache"/>
            <Button fx:id="btnModifier" text="Modifier"/>
            <Button fx:id="btnSupprimer" text="Supprimer"/>
        </HBox>
    </bottom>

</BorderPane>

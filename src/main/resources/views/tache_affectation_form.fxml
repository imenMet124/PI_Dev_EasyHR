<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.tache.controllers.TacheAndAffectationFormController">

    <VBox spacing="20" alignment="TOP_CENTER">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <!-- Title -->
        <Label text="Formulaire d'Affectation et de Tâche" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Task Title -->
        <HBox spacing="10">
            <Label text="Titre:"/>
            <TextField fx:id="titreField" promptText="Entrez le titre de la tâche"/>
        </HBox>

        <!-- Description -->
        <HBox spacing="10">
            <Label text="Description:"/>
            <TextArea fx:id="descField" promptText="Entrez la description de la tâche"/>
        </HBox>

        <!-- Priority -->
        <HBox spacing="10">
            <Label text="Priorité:"/>
            <ComboBox fx:id="prioriteCombo" promptText="Sélectionnez la priorité">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Haute"/>
                        <String fx:value="Moyenne"/>
                        <String fx:value="Basse"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <!-- Status -->
        <HBox spacing="10">
            <Label text="Statut:"/>
            <ComboBox fx:id="statutCombo" promptText="Sélectionnez le statut">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="En cours"/>
                        <String fx:value="Terminé"/>
                        <String fx:value="Annulé"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <!-- Deadline -->
        <HBox spacing="10">
            <Label text="Deadline:"/>
            <DatePicker fx:id="deadlinePicker"/>
        </HBox>

        <!-- Project -->
        <HBox spacing="10">
            <Label text="Projet:"/>
            <ComboBox fx:id="projetCombo" promptText="Sélectionnez le projet"/>
        </HBox>

        <!-- Assign Employee to Task -->
        <HBox spacing="10">
            <Label text="Employé:"/>
            <ComboBox fx:id="employeCombo" promptText="Sélectionnez un employé"/>
        </HBox>

        <!-- Assign Task -->
        <HBox spacing="10">
            <Label text="Tâche:"/>
            <ComboBox fx:id="tacheCombo" promptText="Sélectionnez une tâche"/>
        </HBox>

        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="saveBtn" text="Enregistrer" onAction="#saveTache" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button fx:id="cancelBtn" text="Annuler" onAction="#closeForm" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </VBox>

</AnchorPane>

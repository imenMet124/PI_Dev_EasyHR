<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.tache.controllers.AffectationController"
            style="-fx-background-color: #f4f4f4;">

    <top>
        <Label text="Gestion des Affectations" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <center>
        <TableView fx:id="affectationTable" style="-fx-background-color: white; -fx-border-radius: 8px;">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                <TableColumn fx:id="tacheCol" text="ID Tâche" prefWidth="150"/>
                <TableColumn fx:id="employeCol" text="ID Employé" prefWidth="150"/>
                <TableColumn fx:id="dateAffectationCol" text="Date Affectation" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="15" alignment="center" style="-fx-padding: 10px;">
            <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterAffectation"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 8px 20px;"/>
            <Button fx:id="btnSupprimer" text="Supprimer" onAction="#supprimerAffectation"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 8px 20px;"/>
        </HBox>
    </bottom>

</BorderPane>

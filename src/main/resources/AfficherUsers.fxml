<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="tn.esprit.Users.controller.AfficherUsersController">

    <!-- Background Image -->
    <ImageView fitHeight="600" fitWidth="800" preserveRatio="false">
        <image>
            <Image url="@/images/Apartment rent-rafiki.png"/> <!-- Change to your actual background image -->
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 30;">
        <children>

            <!-- Title -->
            <Label text="User Management"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                <font>
                    <Font name="Arial" size="28"/>
                </font>
            </Label>

            <!-- Search Bar -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="Search:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                <TextField fx:id="searchField" promptText="Enter user name..."
                           style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 8;"/>
                <Button text="Search" onAction="#handleSearch"
                        style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8;">
                </Button>
            </HBox>

            <!-- ListView for Users -->
            <ListView fx:id="userListView" prefHeight="350.0"
                      style="-fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-background-radius: 5;">
            </ListView>

            <!-- Buttons for CRUD Operations -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Add User" fx:id="btnAdd" onAction="#handleAdd"
                        style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8;"/>
                <Button text="Edit User" fx:id="btnEdit" onAction="#handleEdit"
                        style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8;"/>
                <Button text="Delete User" fx:id="btnDelete" onAction="#handleDelete"
                        style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8;"/>
            </HBox>

        </children>
    </VBox>
</StackPane>

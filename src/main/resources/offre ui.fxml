<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="tn.esprit.Offres.controllers.OffresController">
    <children>
        <!-- Barre latérale du dashboard -->
        <VBox prefHeight="665.0" prefWidth="200" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
           <children>
               <Label style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard" />
               <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Accueil" />
               <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Offres d'Emploi" />
               <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Paramètres" />


           </children>
        </VBox>

        <!-- Contenu principal -->
        <VBox layoutX="200" prefWidth="700" style="-fx-padding: 20;">
   <children>
               <!-- Barre de recherche -->
       <HBox spacing="10" style="-fx-padding: 10;">
           <children>
               <TextField fx:id="searchField" prefWidth="400" promptText="Rechercher une offre..." />
               <ComboBox fx:id="statutComboBox" promptText="Sélectionner un statut" prefWidth="180"/>
               <Button fx:id="searchButton" style="-fx-background-color: #3498DB; -fx-text-fill: white;" text="Rechercher" />
           </children>
       </HBox>


       <!-- Liste des offres -->
               <ScrollPane fitToWidth="true" prefHeight="600.0">
                   <content>
                       <VBox fx:id="offresContainer" spacing="15" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
                          <children>
                              <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" text="Liste des Offres d'Emploi" />
                              <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 10; -fx-box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                                 <children>
                                     <HBox spacing="10">
                                        <children>
                                            <ImageView fitHeight="60" fitWidth="60" />
                                            <VBox>
                                               <children>
                                                   <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Titre du Poste" />
                                                   <Label style="-fx-text-fill: #666;" text="Description du poste en quelques mots..." />
                                                   <Label style="-fx-text-fill: #999;" text="Date de publication: JJ/MM/AAAA" />
                                               </children>
                                            </VBox>
                                            <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Postuler" />
                                        </children>
                                     </HBox>
                                 </children>
                              </VBox>
                          </children>
                       </VBox>
                   </content>
               </ScrollPane>
   </children>
        </VBox>
    </children>
</AnchorPane>

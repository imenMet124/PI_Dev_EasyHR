<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Offres.controllers.OffresController">
    <children>
        <!-- Barre latérale du dashboard -->
        <VBox prefHeight="703.0" prefWidth="200" style="-fx-background-color: #72A0C1; -fx-padding: 20;" styleClass="vbox-container" stylesheets="@Style.css">
            <children>
                <ImageView fitHeight="132.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/logoFinal.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </ImageView>

                <Label style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin></Label>

                <Button fx:id="accueil" mnemonicParsing="false" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Accueil">
                    <VBox.margin>
                  <Insets />
                    </VBox.margin></Button>

                <Button fx:id="ajout" mnemonicParsing="false" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Ajoute Une Offre">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin></Button>

                <Button fx:id="gestion" mnemonicParsing="false" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Les Offres">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin></Button>

                <Button fx:id="afficherCandidaturesButton" mnemonicParsing="false" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Candidatures">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin></Button>
            </children>
        </VBox>

        <!-- Contenu principal -->
        <VBox layoutX="200" prefWidth="700" style="-fx-padding: 20;">
   <children>
               <!-- Barre de recherche -->
       <HBox spacing="10" style="-fx-padding: 10;">
           <children>
               <TextField fx:id="searchField" prefWidth="400"  style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" promptText="Rechercher une offre..." />
               <ComboBox fx:id="statutComboBox" prefWidth="180" promptText="Sélectionner un statut" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" />
               <Button fx:id="searchButton" prefHeight="38.0" prefWidth="51.0" style="-fx-background-color: #3498DB; -fx-text-fill: white;" text="Rechercher" />
           </children>
       </HBox>


       <!-- Liste des offres -->
               <ScrollPane fitToWidth="true" prefHeight="600.0">
                   <content>
                       <VBox fx:id="offresContainer" spacing="15" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
                          <children>
                              <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" text="Liste des Offres d'Emploi" />
                              <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 10; -fx-box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                                 <children>
                                     <HBox spacing="10">
                                        <children>
                                            <ImageView fitHeight="60" fitWidth="60" />
                                            <VBox>
                                               <children>
                                                   <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Titre du Poste" />
                                                   <Label style="-fx-text-fill: #666;" text="Description du poste en quelques mots..." />
                                                   <Label style="-fx-text-fill: #999;" text="Date de publication: JJ/MM/AAAA" />
                                               </children>
                                            </VBox>
                                            <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Postuler" />
                                        </children>
                                     </HBox>
                                 </children>
                              </VBox>
                          </children>
                       </VBox>
                   </content>
               </ScrollPane>
   </children>
        </VBox>
    </children>
</AnchorPane>

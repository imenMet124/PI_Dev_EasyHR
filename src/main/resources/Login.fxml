<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="tn.esprit.formations.controllers.LoginController">
   <children>
       <!-- Background Image -->
       <ImageView fitHeight="600" fitWidth="800" preserveRatio="false">
           <image>
               <Image url="@/images/Login-amico.png" /> <!-- Add a background image -->
           </image>
       </ImageView>
   
       <!-- Main Content -->
       <VBox alignment="CENTER" spacing="30" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 40;">
      <children>
      
              <!-- Logo (Larger Size) -->
              <ImageView fitHeight="200" fitWidth="500" preserveRatio="true">
                  <image>
                      <Image url="@/images/logoEasyHR.png" /> <!-- Add your logo here -->
                  </image>
              </ImageView>
      
              <!-- Title -->
              <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Welcome Back">
                  <font>
                      <Font name="Arial" size="32" />
                  </font>
              </Label>
      
              <!-- Subtitle -->
              <Label style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Sign in to continue">
                  <font>
                      <Font name="Arial" size="16" />
                  </font>
              </Label>
      
              <!-- Form Container -->
              <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
         <children>
                     <!-- Email Field -->
                     <TextField fx:id="emailField" prefWidth="400" promptText="Enter your email" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                         <font>
                             <Font name="Arial" size="14" />
                         </font>
                     </TextField>
         
                     <!-- Password Field -->
                     <HBox alignment="CENTER_LEFT" layoutX="92.0" layoutY="315.0" prefHeight="39.0" prefWidth="370.0" spacing="5">
                         <children>
                             <StackPane prefWidth="250.0" HBox.hgrow="ALWAYS">
                                <children>
                                    <PasswordField fx:id="passwordField" alignment="CENTER" prefHeight="39.0" prefWidth="337.0" promptText="Password">
                                        <font>
                                            <Font name="FiraCode Nerd Font Reg" size="14.0" />
                                        </font>
                                    </PasswordField>
                                    <TextField fx:id="visiblePassword" alignment="CENTER" managed="false" prefHeight="39.0" prefWidth="324.0" promptText="Password" visible="false">
                                        <font>
                                            <Font name="FiraCode Nerd Font Reg" size="14.0" />
                                        </font>
                                    </TextField>
                                </children>
                             </StackPane>
                             <Button fx:id="togglePasswordButton" onAction="#togglePasswordVisibility" style="-fx-background-color: transparent;">
                                 <graphic>
                                     <ImageView fx:id="eyeIcon" />
                                 </graphic>
                             </Button>
                         </children>
                     </HBox>
         
                     <!-- Login Button -->
                     <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="400" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12; -fx-border-radius: 5; -fx-cursor: hand;" text="Login">
                         <font>
                             <Font name="Arial" size="16" />
                         </font>
                     </Button>
         
                     <!-- Forgot Password Link -->
                     <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPassword" style="-fx-text-fill: #3498DB; -fx-font-size: 14px; -fx-underline: true; -fx-cursor: hand;" text="Forgot Password?">
                         <font>
                             <Font name="Arial" size="14" />
                         </font>
                     </Hyperlink>
         
                     <!-- Sign Up Link -->
                     <HBox alignment="CENTER" spacing="5">
            <children>
                            <Label style="-fx-text-fill: #7F8C8D; -fx-font-size: 14px;" text="Don't have an account?">
                                <font>
                                    <Font name="Arial" size="14" />
                                </font>
                            </Label>
                            <Hyperlink fx:id="signUpLink" onAction="#handleSignUpRedirect" style="-fx-text-fill: #3498DB; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: transparent;" text="Sign up">
                                <font>
                                    <Font name="Arial Bold" size="14" />
                                </font>
                            </Hyperlink>
            </children>
                     </HBox>
         </children>
              </VBox>
      
              <!-- Error Message -->
              <Label fx:id="errorLabel" style="-fx-text-fill: #E74C3C; -fx-font-size: 14px; -fx-font-weight: bold;">
                  <font>
                      <Font name="Arial" size="14" />
                  </font>
              </Label>
      </children>
       </VBox>
   </children>
</StackPane>

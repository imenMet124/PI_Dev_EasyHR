<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.Users.controller.LoginController">
    <!-- Background Image -->
    <ImageView fitWidth="800" fitHeight="600" preserveRatio="false">
        <image>
            <Image url="@/images/Login-amico.png"/> <!-- Add a background image -->
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox spacing="30" alignment="CENTER" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 40;">

        <!-- Logo (Larger Size) -->
        <ImageView fitHeight="200" fitWidth="500" preserveRatio="true">
            <image>
                <Image url="@/images/logoEasyHR.png"/> <!-- Add your logo here -->
            </image>
        </ImageView>

        <!-- Title -->
        <Label text="Welcome Back" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
            <font>
                <Font name="Arial" size="32"/>
            </font>
        </Label>

        <!-- Subtitle -->
        <Label text="Sign in to continue" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;">
            <font>
                <Font name="Arial" size="16"/>
            </font>
        </Label>

        <!-- Form Container -->
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <!-- Email Field -->
            <TextField fx:id="emailField" promptText="Enter your email" prefWidth="400" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
            </TextField>

            <!-- Password Field -->
            <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="400" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
            </PasswordField>

            <!-- Login Button -->
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefWidth="400" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12; -fx-border-radius: 5; -fx-cursor: hand;">
                <font>
                    <Font name="Arial" size="16"/>
                </font>
            </Button>

            <!-- Forgot Password Link -->
            <Hyperlink fx:id="forgotPasswordLink" text="Forgot Password?" onAction="#handleForgotPassword" style="-fx-text-fill: #3498DB; -fx-font-size: 14px; -fx-underline: true; -fx-cursor: hand;">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
            </Hyperlink>

            <!-- Sign Up Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" style="-fx-text-fill: #7F8C8D; -fx-font-size: 14px;">
                    <font>
                        <Font name="Arial" size="14"/>
                    </font>
                </Label>
                <Hyperlink fx:id="signUpLink" text="Sign up" onAction="#handleSignUpRedirect" style="-fx-text-fill: #3498DB; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: transparent;">
                    <font>
                        <Font name="Arial Bold" size="14"/>
                    </font>
                </Hyperlink>
            </HBox>
        </VBox>

        <!-- Error Message -->
        <Label fx:id="errorLabel" style="-fx-text-fill: #E74C3C; -fx-font-size: 14px; -fx-font-weight: bold;">
            <font>
                <Font name="Arial" size="14"/>
            </font>
        </Label>
    </VBox>
</StackPane>

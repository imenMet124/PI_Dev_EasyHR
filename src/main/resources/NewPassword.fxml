<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.Users.controller.NewPasswordController">
    <!-- Background Image -->
    <ImageView fitWidth="800" fitHeight="600" preserveRatio="false">
        <image>
            <Image url="@/images/Forgot password-bro.png"/>
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox spacing="30" alignment="CENTER" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 40;">
        <!-- Title -->
        <Label text="Set New Password" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
            <font>
                <Font name="Arial" size="32"/>
            </font>
        </Label>

        <!-- Form Container -->
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <!-- New Password Field -->
            <TextField fx:id="newPasswordField" promptText="Enter new password" prefWidth="300" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
            </TextField>

            <!-- Confirm Password Field -->
            <TextField fx:id="confirmPasswordField" promptText="Confirm new password" prefWidth="300" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
            </TextField>

            <!-- Submit Button -->
            <Button text="Set Password" onAction="#handleSetPassword" prefWidth="300" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12; -fx-border-radius: 5; -fx-cursor: hand;">
                <font>
                    <Font name="Arial" size="16"/>
                </font>
            </Button>
        </VBox>

        <!-- Success Message -->
        <Label fx:id="successLabel" style="-fx-text-fill: #27AE60; -fx-font-size: 14px; -fx-font-weight: bold;" visible="false">
            <font>
                <Font name="Arial" size="14"/>
            </font>
        </Label>

        <!-- Error Message -->
        <Label fx:id="errorLabel" style="-fx-text-fill: #E74C3C; -fx-font-size: 14px; -fx-font-weight: bold;">
            <font>
                <Font name="Arial" size="14"/>
            </font>
        </Label>

        <!-- Back to Login Link -->
        <Hyperlink fx:id="backToLoginLink" text="Back to Login" onAction="#handleBackToLogin" style="-fx-text-fill: #3498DB; -fx-font-size: 14px; -fx-underline: true; -fx-cursor: hand;" visible="false">
            <font>
                <Font name="Arial" size="14"/>
            </font>
        </Hyperlink>
    </VBox>
</StackPane>
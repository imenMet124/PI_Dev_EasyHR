<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Offres.controllers.CandidatController">

    <children>
        <HBox prefHeight="600.0" prefWidth="900.0" spacing="0">
            <children>
                <!-- ✅ Barre latérale avec logo et boutons -->
                <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
                    <children>
                        <ImageView fitHeight="87.0" fitWidth="83.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/Logo.png" />
                            </image>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </ImageView>

                        <Label style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin></Label>

                        <Button fx:id="accueil" style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Accueil">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin></Button>

                        <Button fx:id="ajout" style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Ajoute Une Offre">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin></Button>

                        <Button fx:id="gestion" style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Les Offres">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin></Button>

                        <Button fx:id="candidature" style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Candidatures" />
                    </children>
                </VBox>

                <!-- ✅ Contenu principal -->
                <VBox prefWidth="700.0" spacing="20" style="-fx-padding: 20;">
                    <children>

                        <!-- ✅ Titre -->
                        <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #333;" text="Confirmez Vos Informations Comme Candidat" />

                        <!-- ✅ Contenu principal divisé en deux parties -->
                        <HBox spacing="20">
                            <children>
                                <!-- ✅ Image -->
                                <VBox>
                                    <children>
                                        <ImageView fx:id="eventImageView" fitHeight="300.0" fitWidth="300.0" />
                                    </children>
                                </VBox>

                                <!-- ✅ Formulaire -->
                                <VBox spacing="15">
                                    <children>
                                        <GridPane hgap="10" vgap="10">
                                            <columnConstraints>
                                                <ColumnConstraints minWidth="150" prefWidth="200" />
                                                <ColumnConstraints hgrow="ALWAYS" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                            </rowConstraints>
                                            <children>
                                                <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                                <TextField fx:id="nomC" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                <TextField fx:id="emailC" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                                <Label text="Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                                <TextField fx:id="telC" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                                <Label text="Poste Actuel:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                                <TextField fx:id="posteC" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                                <Label text="Département:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                                <TextField fx:id="depC" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                                <Label text="Expérience Interne:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                                <TextField fx:id="expC" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                                <Button text="Upload Experience Interne" onAction="#handleUploadExperienceInterne" GridPane.columnIndex="2" GridPane.rowIndex="5" />

                                                <Label text="Compétence:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                                                <TextField fx:id="compC" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                                <Button text="Upload Competence" onAction="#handleUploadCompetence" GridPane.columnIndex="2" GridPane.rowIndex="6" />

                                                <Label text="Disponibilité:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                                                <ComboBox fx:id="dispC" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                            </children>
                                        </GridPane>

                                        <!-- ✅ Bouton Confirmer -->
                                        <HBox alignment="CENTER" spacing="20">
                                            <children>
                                                <Button fx:id="confirmerC" style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold; -fx-padding: 10 20;" text="✅ Confirmer Mes Informations" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </HBox>
    </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Offres.controllers.CandidatController">

    <children>
        <HBox prefHeight="600.0" prefWidth="900.0" spacing="0">
            <children>
                <!-- ✅ Barre latérale avec logo et boutons -->
                <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #72A0C1; -fx-padding: 20;" styleClass="vbox-container" stylesheets="@Style.css">
                    <children>
                        <ImageView fitHeight="123.0" fitWidth="379.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/logoFinal.png" />
                            </image>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </ImageView>

                        <Label style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin></Label>

                        <Button fx:id="accueil" style="-fx-background-color: FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Accueil">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin></Button>

                        <Button fx:id="ajout" style="-fx-background-color: FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Ajoute Une Offre">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin></Button>

                        <Button fx:id="gestion" style="-fx-background-color: FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Les Offres">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin></Button>

                        <Button fx:id="candidature" style="-fx-background-color: FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Candidatures" />
                    </children>
                </VBox>

                <!-- ✅ Contenu principal -->
                <VBox prefWidth="700.0" spacing="20" style="-fx-padding: 20;">
                    <children>

                        <!-- ✅ Titre -->
                        <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #333;" text="Confirmez Vos Informations Comme Candidat" />

                        <!-- ✅ Contenu principal divisé en deux parties -->
                        <HBox spacing="20">
                            <children>
                                <!-- ✅ Image -->
                                <VBox>
                                    <children>
                                        <ImageView fx:id="eventImageView" fitHeight="262.0" fitWidth="246.0">
                                 <image>
                                    <Image url="@images/b.jpg" />
                                 </image></ImageView>
                                    </children>
                                </VBox>

                                <!-- ✅ Formulaire -->
                                <VBox spacing="15">
                                    <children>
                                        <GridPane hgap="10" vgap="10">
                                            <columnConstraints>
                                                <ColumnConstraints maxWidth="171.0" minWidth="63.0" prefWidth="106.0" />
                                                <ColumnConstraints hgrow="ALWAYS" maxWidth="225.0" minWidth="111.0" prefWidth="156.0" />
                                    <ColumnConstraints maxWidth="121.0" minWidth="86.0" prefWidth="112.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                            </rowConstraints>
                                            <children>
                                                <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                                <TextField fx:id="nomC" editable="false" prefHeight="25.0" prefWidth="129.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                <TextField fx:id="emailC" editable="false" prefHeight="25.0" prefWidth="129.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                                <Label text="Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                                <TextField fx:id="telC" editable="false" prefHeight="25.0" prefWidth="129.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                                <Label text="Poste Actuel:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                                <TextField fx:id="posteC" editable="false" prefHeight="25.0" prefWidth="129.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                                <Label text="Département:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                                <TextField fx:id="depC" editable="false" prefHeight="25.0" prefWidth="129.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                                <Label text="Expérience Interne:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                                <TextField fx:id="expC" prefHeight="25.0" prefWidth="129.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                                <Button onAction="#handleUploadExperienceInterne" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 12px; -fx-font-weight: bold; -fx-padding: 8px;" text="Upload Experience Interne" GridPane.columnIndex="2" GridPane.rowIndex="5" />

                                                <Label text="Compétence:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                                                <TextField fx:id="compC" prefHeight="25.0" prefWidth="129.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                                <Button onAction="#handleUploadCompetence" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 12px; -fx-font-weight: bold; -fx-padding: 8px;" text="Upload Competence" GridPane.columnIndex="2" GridPane.rowIndex="6" />

                                                <Label text="Disponibilité:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                                                <ComboBox fx:id="dispC" prefHeight="42.0" prefWidth="156.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                            </children>
                                        </GridPane>

                                        <!-- ✅ Bouton Confirmer -->
                                        <HBox alignment="CENTER" spacing="20">
                                            <children>
                                                <Button fx:id="confirmerC" style="-fx-background-color: FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold; -fx-padding: 10 20;" text=" Confirmer Mes Informations" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </HBox>
    </children>
</AnchorPane>

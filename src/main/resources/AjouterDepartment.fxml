<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="tn.esprit.Users.controller.AjouterDepartmentController">

    <!-- Background Image -->
    <ImageView fitHeight="400" fitWidth="600" preserveRatio="false">
        <image>
            <Image url="@/images/Apartment rent-rafiki.png"/> <!-- Change to your actual background image -->
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="15"
          style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 30;">
        <children>

            <!-- Title -->
            <Label text="Add New Department"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                <font>
                    <Font name="Arial" size="24"/>
                </font>
            </Label>

            <!-- Form Container -->
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                    <ColumnConstraints minWidth="300"/>
                </columnConstraints>
                <children>

                    <!-- Department Name -->
                    <Label text="Department Name:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" promptText="Enter department name"
                               style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 8;"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <!-- Department Description -->
                    <Label text="Description:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextArea fx:id="descriptionArea" promptText="Enter description"
                              style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 8;"
                              prefRowCount="3" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <!-- Department Location -->
                    <Label text="Location:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="locationField" promptText="Enter location"
                               style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 8;"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <!-- Department Manager -->
                    <Label text="Manager:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="managerComboBox" promptText="Select manager"
                              style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 8;"
                              GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Back" onAction="#handleBack"
                        style="-fx-background-color: #BDC3C7; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8;"/>
                <Button text="Save" onAction="#handleSaveDepartment"
                        style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 8;"/>
            </HBox>

        </children>
    </VBox>
</StackPane>

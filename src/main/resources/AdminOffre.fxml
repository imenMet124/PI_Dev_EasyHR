<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Offres.controllers.AdminOffresController">
    <children>
        <!-- Barre latérale du dashboard -->
        <VBox prefHeight="703.0" prefWidth="200" style="-fx-background-color: #72A0C1; -fx-padding: 20;" styleClass="vbox-container" stylesheets="@Style.css">
            <children>
                <ImageView fitHeight="132.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/logoFinal.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </ImageView>

                <Label style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin></Label>

                <Button fx:id="accueil" mnemonicParsing="false" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Accueil">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin></Button>

                <Button fx:id="ajout" mnemonicParsing="false" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Ajoute Une Offre">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin></Button>

                <Button fx:id="gestion" mnemonicParsing="false" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Les Offres">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin></Button>

                <Button fx:id="afficherCandidaturesButton" mnemonicParsing="false" onAction="#afficherCandidatures" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Candidatures">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin></Button>
            </children>
        </VBox>

        <!-- Contenu principal -->
        <VBox layoutX="200" prefWidth="700" style="-fx-padding: 20;">
            <children>
                <!-- Barre de recherche -->
                <HBox spacing="10" style="-fx-padding: 10;">
                    <children>
                        <TextField fx:id="searchField" prefWidth="600" promptText="Rechercher une offre..." style="-fx-background-radius: 5; -fx-border-radius: 5;" />
                        <Button style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Rechercher" />
                    </children>
                </HBox>

                <!-- Liste des offres -->
                <ScrollPane fitToWidth="true" prefHeight="618.0" prefWidth="671.0" style="-fx-background-color: white;">
                    <content>
                        <VBox fx:id="offresContainer" spacing="15" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
                            <children>
                                <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" text="Gestion des Offres d'Emploi" />

                                <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 10; -fx-box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                                    <children>
                                        <HBox spacing="10">
                                            <children>
                                                <ImageView fitHeight="60" fitWidth="60" />
                                                <VBox>
                                                    <children>
                                                        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Titre du Poste" />
                                                        <Label style="-fx-text-fill: #666;" text="Description du poste en quelques mots..." />
                                                        <Label style="-fx-text-fill: #999;" text="Date de publication: JJ/MM/AAAA" />
                                                    </children>
                                                </VBox>

                                                <Button style="-fx-background-color: #F1C40F; -fx-text-fill: black; -fx-background-radius: 10; -fx-font-weight: bold;" text="Modifier" />

                                                <Button style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Supprimer" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>

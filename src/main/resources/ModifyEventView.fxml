<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.evenement.controllers.ModifyEventsController">
    <stylesheets>
        <String fx:value="style.css"/>
    </stylesheets>

    <VBox spacing="20" prefWidth="1200" prefHeight="800"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- ✅ Titre -->
        <Label styleClass="details-title" text="Modifier l'événement"/>

        <!-- ✅ Conteneur scrollable -->
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="20" styleClass="form-container">

                <GridPane hgap="20" vgap="20" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="300"/>
                        <ColumnConstraints prefWidth="300"/>
                    </columnConstraints>

                    <!-- Partie Gauche -->
                    <VBox spacing="15" GridPane.columnIndex="0">
                        <Label text="Titre:"/>
                        <TextField fx:id="titreField"/>

                        <Label text="Description:"/>
                        <TextArea fx:id="descriptionField" prefRowCount="3" wrapText="true"/>

                        <Label text="Date:"/>
                        <DatePicker fx:id="datePicker"/>

                        <Label text="Heure:"/>
                        <TextField fx:id="heureField" promptText="HH:MM:SS"/>
                    </VBox>

                    <!-- Partie Droite -->
                    <VBox spacing="15" GridPane.columnIndex="1">
                        <Label text="Lieu:"/>
                        <TextField fx:id="lieuField"/>

                        <Label text="Capacité:"/>
                        <TextField fx:id="capaciteField"/>

                        <Label text="Participants:"/>
                        <TextField fx:id="participantsField" editable="false"/>

                        <Label text="Image Actuelle:"/>
                        <ImageView fx:id="eventImageView" fitHeight="200" fitWidth="300"/>
                    </VBox>
                </GridPane>

                <!-- ✅ Gestion de l'image -->
                <VBox spacing="10" alignment="CENTER" styleClass="image-upload-container">
                    <Label text="Changer l'image:"/>

                    <HBox spacing="10" alignment="CENTER">
                        <TextField fx:id="imagePathField" editable="false"/>
                        <Button text="📂 Upload" onAction="#handleUploadImage" styleClass="upload-button"/>
                    </HBox>
                </VBox>


            </VBox>
        </ScrollPane>
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="cancelButton" text="❌ Annuler" onAction="#handleCancel" styleClass="cancel-button"/>
            <Button fx:id="saveButton" text="💾 Enregistrer" onAction="#handleModifierEvent" styleClass="save-button"/>
        </HBox>



    </VBox>
</AnchorPane>

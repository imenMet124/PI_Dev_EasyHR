<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Offres.controllers.AjoutController">

    <children>
        <HBox prefHeight="600.0" prefWidth="900.0" spacing="0">
            <children>
                <!-- Barre latérale -->
                <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #72A0C1; -fx-padding: 20;" styleClass="vbox-container" stylesheets="@Style.css">
                    <children>
                        <ImageView fitHeight="129.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/logoFinal.png" />
                            </image>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </ImageView>

                        <Label style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard">
                     <padding>
                        <Insets bottom="20.0" />
                     </padding></Label>

                        <Button fx:id="accueil" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Accueil">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></Button>
                        <Button fx:id="ajout" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Ajoute Une Offre">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></Button>
                        <Button fx:id="gestion" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Les Offres">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></Button>
                        <Button fx:id="candidature" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Gérer Candidatures" />
                    </children>
                </VBox>

                <!-- Contenu principal -->
                <VBox prefWidth="700.0" spacing="20" style="-fx-padding: 20;">
                    <children>
                        <!-- Titre -->
                        <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #333;" text="Ajouter Offre">
                     <padding>
                        <Insets left="250.0" />
                     </padding></Label>
                  <ImageView fitHeight="174.0" fitWidth="227.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/c.png" />
                     </image>
                     <VBox.margin>
                        <Insets left="200.0" />
                     </VBox.margin>
                  </ImageView>

                        <!-- Formulaire -->
                        <GridPane hgap="10" prefHeight="312.0" prefWidth="504.0" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="31.0" minHeight="26.0" prefHeight="26.0" />
                                <RowConstraints maxHeight="70.0" minHeight="30.0" prefHeight="64.0" />
                                <RowConstraints maxHeight="45.0" minHeight="30.0" prefHeight="40.0" />
                                <RowConstraints minHeight="30.0" />
                                <RowConstraints minHeight="30.0" />
                                <RowConstraints minHeight="30.0" />
                            </rowConstraints>
                            <children>
                                <Label text="Titre:" />
                                <TextField fx:id="titre" prefWidth="250.0" style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" />

                                <Label text="Description:" GridPane.rowIndex="1" />
                                <TextArea fx:id="desc" prefHeight="80.0" prefWidth="250.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Département:" GridPane.rowIndex="2" />
                                <ComboBox fx:id="departementComboBox" prefWidth="250.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Date:" GridPane.rowIndex="3" />
                                <TextField fx:id="date" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Recruteur Responsable:" GridPane.rowIndex="4" />
                                <TextField fx:id="rec" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="Statut:" GridPane.rowIndex="5" />
                                <ComboBox fx:id="statutComboBox" prefWidth="250.0" style="-fx-background-color: white; -fx-border-color: #AAAAAA; -fx-border-radius: 8px; -fx-padding: 5px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                            </children>
                        </GridPane>

                        <!-- Bouton Ajouter -->
                        <HBox alignment="CENTER">
                            <children>
                                <Button fx:id="ajoutButton" onAction="#ajouterOffre" style="-fx-background-color: #FFAA33; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold; -fx-padding: 10 20;" text="Ajouter" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>

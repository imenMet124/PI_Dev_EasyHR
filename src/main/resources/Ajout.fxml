<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="450.0" prefWidth="739.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Offres.controllers.AjoutController">

    <children>
        <!-- Barre latérale du menu -->
        <VBox prefHeight="450.0" prefWidth="200.0" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
            <children>
                <ImageView fitHeight="87.0" fitWidth="83.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/Logo.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </ImageView>

                <Label style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard" />

                <Button fx:id="accueil" mnemonicParsing="false"
                        style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                        text="Accueil">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>

                <Button fx:id="ajout" mnemonicParsing="false"
                        style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                        text="Ajoute Une Offre">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>

                <Button fx:id="gestion" mnemonicParsing="false"
                        style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                        text="Gérer Les Offres">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>

                <Button fx:id="candidature" mnemonicParsing="false"
                        style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                        text="Gérer Candidatures" />
            </children>
        </VBox>

        <!-- Contenu principal -->
        <VBox layoutX="200.0" prefWidth="539.0" style="-fx-padding: 20;">
            <children>
                <!-- Titre -->
                <HBox alignment="CENTER_LEFT" prefHeight="50.0">
                    <children>
                        <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #333;" text="Ajouter Offre" />
                    </children>
                </HBox>

                <!-- Champs du formulaire -->
                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30" />
                        <RowConstraints minHeight="30" />
                        <RowConstraints minHeight="30" />
                        <RowConstraints minHeight="30" />
                        <RowConstraints minHeight="30" />
                        <RowConstraints minHeight="30" />
                    </rowConstraints>

                    <children>
                        <Label text="Titre:" />
                        <TextField fx:id="titre" prefWidth="250.0"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" />

                        <Label text="Description:" GridPane.rowIndex="1" />
                        <TextArea fx:id="desc" prefHeight="80.0" prefWidth="250.0"
                                  style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1" />

                        <Label text="Département:" GridPane.rowIndex="2" />
                        <ComboBox fx:id="departementComboBox" prefWidth="250.0"
                                  style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1"
                                  GridPane.rowIndex="2" />

                        <Label text="Date:" GridPane.rowIndex="3" />
                        <TextField fx:id="date" style="-fx-background-radius: 5; -fx-border-radius: 5;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Recruteur Responsable:" GridPane.rowIndex="4" />
                        <TextField fx:id="rec" style="-fx-background-radius: 5; -fx-border-radius: 5;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Statut:" GridPane.rowIndex="5" />
                        <ComboBox fx:id="statutComboBox" prefWidth="250.0"
                                  style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1"
                                  GridPane.rowIndex="5" />
                    </children>
                </GridPane>

                <!-- Bouton Ajouter -->
                <Button fx:id="ajoutButton" onAction="#ajouterOffre"
                        style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold; -fx-padding: 10 20;"
                        text="Ajouter">
                    <VBox.margin>
                        <Insets left="250.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>

    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.Users.controller.AjouterUserController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="15" alignment="TOP_CENTER"
          AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

        <!-- Title -->
        <Label text="Add New User"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

        <!-- Form Fields -->
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints minWidth="300"/>
            </columnConstraints>
            <children>

                <!-- Name -->
                <Label text="Name:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="Enter name"
                           styleClass="textfield-modern-white" stylesheets="@Style.css"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Email -->
                <Label text="Email:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="Enter email"
                           styleClass="textfield-modern-white" stylesheets="@Style.css"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Phone -->
                <Label text="Phone Number:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneField" promptText="Enter phone number"
                           styleClass="textfield-modern-white" stylesheets="@Style.css"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Salary -->
                <Label text="Salary:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="salaryField" promptText="Enter salary"
                           styleClass="textfield-modern-white" stylesheets="@Style.css"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Position -->
                <Label text="Position:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="positionField" promptText="Enter position"
                           styleClass="textfield-modern-white" stylesheets="@Style.css"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Role -->
                <Label text="Role:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="roleBox" promptText="Select role"
                          styleClass="combobox-modern" stylesheets="@Style.css"
                          GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <!-- Status -->
                <Label text="Status:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statusBox" promptText="Select status"
                          styleClass="combobox-modern" stylesheets="@Style.css"
                          GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <!-- Department -->
                <Label text="Department:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <ComboBox fx:id="departmentBox" promptText="Select department"
                          styleClass="combobox-modern" stylesheets="@Style.css"
                          GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <!-- Hire Date -->
                <Label text="Hire Date:" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePicker" promptText="Select hire date"
                            styleClass="textfield-modern-white" stylesheets="@Style.css"
                            GridPane.rowIndex="8" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <!-- Buttons -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Back" fx:id="btnBack" onAction="#handleBackToAfficherUser"
                    styleClass="button-modern" stylesheets="@Style.css"/>
            <Button text="Add User" fx:id="btnAdd" onAction="#handleAddUser"
                    styleClass="button-modern" stylesheets="@Style.css"/>
        </HBox>

    </VBox>
</AnchorPane>

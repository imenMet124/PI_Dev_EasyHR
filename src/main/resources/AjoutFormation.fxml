<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.formations.controllers.AjoutFormationController"
          alignment="center" hgap="10" vgap="10">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <!-- Titre de la formation -->
    <Label text="Titre * :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="titreField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <!-- Description -->
    <Label text="Description * :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Sélection des compétences (optionnel) -->
    <Label text="Compétences cibles :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ListView fx:id="competencesListView" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Ajout des modules (optionnel) -->
    <Label text="Modules :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <VBox GridPane.columnIndex="1" GridPane.rowIndex="3">
        <ListView fx:id="modulesListView"/>
        <Button fx:id="ajouterModuleButton" text="Ajouter Module"/>
    </VBox>

    <!-- Sélection du quiz final (optionnel) -->
    <Label text="Quiz Final :" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <ComboBox fx:id="quizComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <!-- Bouton d'ajout -->
    <Button fx:id="ajouterFormationButton" text="Ajouter Formation" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

</GridPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.Users.controller.VerificationCodeController">
    <!-- Background Image -->
    <ImageView fitWidth="800" fitHeight="600" preserveRatio="false">
        <image>
            <Image url="@/images/mobile-password-forgot.png"/>
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox spacing="30" alignment="CENTER" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 40;">
        <!-- Title -->
        <Label text="Verify Code" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
            <font>
                <Font name="Arial" size="32"/>
            </font>
        </Label>

        <!-- Subtitle -->
        <Label text="Enter the verification code sent to your phone" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;">
            <font>
                <Font name="Arial" size="16"/>
            </font>
        </Label>

        <!-- Form Container -->
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <!-- Verification Code Field -->
            <TextField fx:id="codeField" promptText="Enter verification code" prefWidth="300" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10;">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
            </TextField>

            <!-- Submit Button -->
            <Button text="Verify Code" onAction="#handleVerifyCode" prefWidth="300" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12; -fx-border-radius: 5; -fx-cursor: hand;">
                <font>
                    <Font name="Arial" size="16"/>
                </font>
            </Button>
        </VBox>

        <!-- Error Message -->
        <Label fx:id="errorLabel" style="-fx-text-fill: #E74C3C; -fx-font-size: 14px; -fx-font-weight: bold;">
            <font>
                <Font name="Arial" size="14"/>
            </font>
        </Label>
    </VBox>
</StackPane>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.Users.controller.AcceuilController">

    <stylesheets>
        <String fx:value="AcceuilView.css" />
    </stylesheets>

    <children>
        <!-- Sidebar -->
        <VBox styleClass="sidebar" prefHeight="600.0" prefWidth="200.0" spacing="15"
              AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <children>
                <StackPane styleClass="sidebar-logo-container">
                    <ImageView fitHeight="80.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@images/logoEasyHR.png" />
                        </image>
                    </ImageView>
                </StackPane>

                <Label fx:id="nomUtilisateur" styleClass="sidebar-username" text="Utilisateur: ..." />

                <!-- Sidebar Buttons -->
                <Button fx:id="Dashboard" styleClass="sidebar-button, animated-transition" onAction="#showDashboard" text="Dashboard" />
                <Button fx:id="gestionUser" styleClass="sidebar-button, animated-transition" onAction="#ouvrirGestionUser" text="Gestion Utilisateurs" />
                <Button fx:id="gestionOffres" styleClass="sidebar-button, animated-transition" onAction="#ouvrirGestionOffres" text="Gestion Offres" />
                <Button fx:id="gestionTaches" styleClass="sidebar-button, animated-transition" onAction="#ouvrirGestionTaches" text="Gestion Tâches" />
                <Button fx:id="gestionEvenements" styleClass="sidebar-button, animated-transition" onAction="#ouvrirGestionEvenements" text="Gestion Événements" />
                <Button fx:id="gestionFormations" styleClass="sidebar-button, animated-transition" onAction="#ouvrirGestionFormations" text="Gestion Formations" />

                <Region VBox.vgrow="ALWAYS" />
                <Label text="EasyHR v1.0" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
            </children>
        </VBox>

        <!-- Main Content (Dynamic) -->
        <StackPane fx:id="contentArea" styleClass="main-content" layoutX="200.0"
                   prefHeight="600.0" prefWidth="600.0"
                   AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
            <Label text="Bienvenue sur la page d'accueil" styleClass="welcome-title" />
        </StackPane>
    </children>
</AnchorPane>
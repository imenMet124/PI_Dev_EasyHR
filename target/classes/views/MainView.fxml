<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.tache.controllers.MainController"
            style="-fx-background-color: #f4f4f4;">

    <!-- Barre de Navigation -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #2C3E50; -fx-padding: 15px;">
            <ImageView fx:id="logoImage" fitWidth="40" fitHeight="40"/>
            <Label text="EasyHR - Tableau de Bord"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Contenu Principal -->
    <center>
        <GridPane alignment="CENTER" hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER"/>
                <ColumnConstraints halignment="CENTER"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints valignment="CENTER"/>
                <RowConstraints valignment="CENTER"/>
                <RowConstraints valignment="CENTER"/>
            </rowConstraints>

            <Button fx:id="btnTaches" text="Gestion des Tâches" onAction="#afficherTaches"
                    GridPane.rowIndex="0" GridPane.columnIndex="0"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-padding: 15px 30px; -fx-border-radius: 10px;"/>

            <Button fx:id="btnProjets" text="Gestion des Projets" onAction="#afficherProjets"
                    GridPane.rowIndex="0" GridPane.columnIndex="1"
                    style="-fx-background-color: #1ABC9C; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-padding: 15px 30px; -fx-border-radius: 10px;"/>

            <Button fx:id="btnEmployes" text="Gestion des Employés" onAction="#afficherEmployes"
                    GridPane.rowIndex="1" GridPane.columnIndex="0"
                    style="-fx-background-color: #E67E22; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-padding: 15px 30px; -fx-border-radius: 10px;"/>

            <Button fx:id="btnAffectations" text="Gestion des Affectations" onAction="#afficherAffectations"
                    GridPane.rowIndex="1" GridPane.columnIndex="1"
                    style="-fx-background-color: #9B59B6; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-padding: 15px 30px; -fx-border-radius: 10px;"/>

            <Button fx:id="btnCommentaires" text="Gestion des Commentaires" onAction="#afficherCommentaires"
                    GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"
                    style="-fx-background-color: #F1C40F; -fx-text-fill: black;
                           -fx-font-size: 16px; -fx-padding: 15px 30px; -fx-border-radius: 10px;"/>
        </GridPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #2C3E50; -fx-padding: 10px;">
            <Label text="© 2025 EasyHR - Tous droits réservés"
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.tache.controllers.EmployeController"
            style="-fx-background-color: #f4f4f4;">

    <top>
        <Label text="Gestion des Employés" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <center>
        <TableView fx:id="employeTable" style="-fx-background-color: white; -fx-border-radius: 8px;">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nomCol" text="Nom" prefWidth="200"/>
                <TableColumn fx:id="roleCol" text="Rôle" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <HBox spacing="10">
                <Label text="Nom:"/>
                <TextField fx:id="txtNom" prefWidth="200"/>
                <Label text="Rôle:"/>
                <TextField fx:id="txtRole" prefWidth="150"/>
            </HBox>
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterEmploye"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 8px 20px;"/>
                <Button fx:id="btnModifier" text="Modifier" onAction="#modifierEmploye"
                        style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-padding: 8px 20px;"/>
                <Button fx:id="btnSupprimer" text="Supprimer" onAction="#supprimerEmploye"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 8px 20px;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.tache.controllers.CommentaireController"
            style="-fx-background-color: #fff;">

    <top>
        <Label text="Gestion des Commentaires" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <center>
        <TableView fx:id="commentaireTable" style="-fx-background-color: white; -fx-border-radius: 8px;">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                <TableColumn fx:id="contenuCol" text="Commentaire" prefWidth="400"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <HBox spacing="10">
                <Label text="Commentaire:"/>
                <TextField fx:id="txtCommentaire" prefWidth="300"/>
            </HBox>
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterCommentaire"
                        style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-padding: 8px 20px;"/>
                <Button fx:id="btnSupprimer" text="Supprimer" onAction="#supprimerCommentaire"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 8px 20px;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.tache.controllers.ProjetController"
            style="-fx-background-color: #e9ecef;">

    <top>
        <Label text="Gestion des Projets" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <center>
        <TableView fx:id="projetTable" style="-fx-background-color: white; -fx-border-radius: 8px;">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nomCol" text="Nom" prefWidth="200"/>
                <TableColumn fx:id="statutCol" text="Statut" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="15" alignment="center" style="-fx-padding: 10px;">
            <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterProjet"
                    style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-padding: 8px 20px;"/>
            <Button fx:id="btnModifier" text="Modifier" onAction="#modifierProjet"
                    style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-padding: 8px 20px;"/>
            <Button fx:id="btnSupprimer" text="Supprimer" onAction="#supprimerProjet"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 8px 20px;"/>
        </HBox>
    </bottom>

</BorderPane>
